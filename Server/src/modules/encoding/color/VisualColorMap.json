{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "type": {
      "enum": ["map"]
    },
    "colorMap": {
      "title": "Color map type",
      "type": "string",
      "enum": [
        "rainbow", "cooltowarm", "blackbody", "grayscale", "blue", "redyellowcyan"
      ]
    },
    "hardMap": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "range": {
      "$ref": "/Range"
    },
    "invert": {
      "type": "boolean"
    },
    "field": {
      "type": "string",
      "format": "property"
    }
  }
}